@page "/counter"

<PageTitle>Counter</PageTitle>

<h1>Counter</h1>

<p role="status">Current count: <b>@(currentCount <= 20 ? currentCount : "No i dupa")</b></p>

<button class="btn btn-primary px-3" @onclick="IncrementCount" disabled="@(currentCount > 20)">+</button>
<button class="btn btn-primary px-3" @onclick="DecrementCount" disabled="@(currentCount is > 20 or < 1)">-</button>
<button class="btn btn-danger" @onclick="ClearCounter" disabled="@(currentCount <= 20)">Reset me</button>
